{{! @file 目的選択モーダルに表示するテーマ選択リストのテンプレート }}
{{#each themes}}
<div class="mb-6">
    <h3 class="text-lg font-bold border-b-2 border-green-500 pb-2 mb-3">{{@key}}</h3>
    <div class="flex flex-wrap gap-2">
        {{#each this}}
        <button 
            type="button" 
            class="theme-select-btn p-2 border rounded-full text-center hover:bg-green-100 hover:border-green-500 transition-colors text-sm"
            data-theme-id="{{this.id}}"
            data-theme-name="{{this.name}}">
            {{this.icon}} {{this.name}}
        </button>
        {{/each}}
    </div>
</div>
{{/each}}
